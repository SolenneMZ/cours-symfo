{% extends "base.html.twig" %}

{% block title %}
    {{category.name}}
{% endblock %}

{% block body %}
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="{{ path('homepage')}}">Accueil</a></li>
        <li class="breadcrumb-item active">{{ category.name }}</li>
    </ol>
    <h1>{{category.name}}</h1>

    {% for product in category.products %}
        <a href="{{ path('product_show', {'category_slug': category.slug, 'slug': product.slug}) }}"><h2>{{product.name}}</h2></a>
        {% include "./shared/_produit.html.twig" with {
            'name': product.name,
            'price': product.price,
            'category': category.name
        }%}
    {% endfor %}
{% endblock %}